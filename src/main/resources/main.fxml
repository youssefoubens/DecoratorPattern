<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.youssef.controllers.MainController"
      alignment="CENTER" spacing="15"
      prefWidth="350" prefHeight="300"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <!-- Title -->
    <Label text="Choisir une boisson:"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- ChoiceBox -->
    <ChoiceBox fx:id="choiceBoisson" prefWidth="200"
               style="-fx-font-size: 14px;"/>

    <!-- Checkboxes -->
    <VBox spacing="10">
        <CheckBox fx:id="checkSucre" text="Ajouter Sucre"
                  style="-fx-font-size: 14px;"/>
        <CheckBox fx:id="checkChocolat" text="Ajouter Chocolat"
                  style="-fx-font-size: 14px;"/>
    </VBox>

    <!-- Button -->
    <Button fx:id="btnCalculer" text="Calculer Prix"
            prefWidth="150" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Button>

    <!-- Result Label -->
    <Label fx:id="lblResult" text="RÃ©sultat ici"
           style="-fx-font-size: 16px; -fx-text-fill: #555555; -fx-font-style: italic;"/>

</VBox>
